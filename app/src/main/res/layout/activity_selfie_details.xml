<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/toolbar_gradient"
    tools:context="com.example.dsi.furore.SelfieDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#EEEEEE"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:id="@+id/image" />

        <LinearLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#15000000"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical" />

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_alignParentTop="true"
            app:spb_sections_count="4"
            app:spb_colors="@array/pb_colors2"
            app:spb_speed="1.0"
            android:id="@+id/pb"
            app:spb_stroke_width="3dp"
            app:spb_stroke_separator_length="4dp"
            app:spb_reversed="true"
            app:spb_mirror_mode="true"
            app:spb_progressiveStart_activated="true"
            app:spb_progressiveStart_speed="1.0"
            app:spb_progressiveStop_speed="1.0" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="@color/icons"
            card_view:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/details_dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:border_width="1.5dp"
                    android:layout_margin="3dp"
                    app:border_color="@color/accent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/details_dp"
                    android:textSize="25sp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/details_name"
                    android:text="NAME"
                    android:layout_toRightOf="@+id/details_dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divider"
                    android:padding="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:id="@+id/div11"
                    android:layout_below="@+id/details_dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/desc_tv"
                    android:layout_below="@+id/div11"
                    android:text="Hello this is selfie description" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="4dp"
                    android:id="@+id/ivLike1"
                    android:src="@drawable/star_silver_"
                    android:layout_below="@+id/desc_tv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/noLikes"
                    android:layout_toRightOf="@+id/ivLike1"
                    android:layout_alignBottom="@+id/ivLike1"
                    android:layout_marginBottom="3dp" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_transparent" />
</RelativeLayout>
